<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="pane" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChatController">
    <stylesheets>
        <URL value="@GUIChat.css" />
        <URL value="@GUIMain.css" />
    </stylesheets>
    <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" pannable="true" prefHeight="450.0" prefWidth="695.0">
        <AnchorPane fx:id="chatPane" minHeight="0.0" minWidth="0.0" prefHeight="500.0" prefWidth="700.0">
            <TabPane fx:id="tabPane" prefHeight="415.0" prefWidth="700.0">
                <Tab closable="false" text="Main">
                    <VBox fx:id="rightVBox" alignment="BOTTOM_LEFT" fillWidth="false" prefHeight="415.0"
                          prefWidth="700.0"
                          style="-fx-border-color: black; -fx-border-insets: 5; -fx-border-width: 3; -fx-border-style: dashed;">
                     <!--<HBox fx:id="senderHBox" alignment="BOTTOM_RIGHT" disable="true" prefHeight="400.0"
                           prefWidth="492.0"
                           style="-fx-border-color: black; -fx-border-insets: 5; -fx-border-width: 3;"
                           visible="false"/>-->
                 </VBox>
                </Tab>
            </TabPane>
        </AnchorPane>
    </ScrollPane>
    <TextField fx:id="text" layoutX="7.0" layoutY="457.0" onKeyPressed="#writeMessageEnter" prefHeight="35.0" prefWidth="433.0" promptText="Type a message here!" />
    <Button layoutX="444.0" layoutY="457.0" mnemonicParsing="false" onAction="#writeMessage" prefHeight="35.0" prefWidth="253.0" text="Send" />
</AnchorPane>
